rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- USERS ---
    // 1. User can read/write their own profile
    // 2. Customers can read Merchant profiles (for 'Find Partner')
    match /users/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && (
        request.auth.uid == userId || resource.data.role == 'MERCHANT'
      );
    }

    // --- ORDERS ---
    // User can read/update orders where they are either the customer or the merchant
    match /orders/{orderId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && (
        resource.data.customerId == request.auth.uid || 
        resource.data.merchantId == request.auth.uid
      );
    }

    // --- CHATS ---
    // Only participants can read/update chats
    match /chats/{chatId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && (
        request.auth.uid in resource.data.participants
      );
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }

    // --- REVIEWS ---
    // Authenticated users can read/write reviews
    match /reviews/{reviewId} {
      allow read, write: if request.auth != null;
    }

    // --- TRANSACTIONS ---
    // Users can access their own transactions
    match /transactions/{transId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (
        resource.data.customerId == request.auth.uid || 
        resource.data.merchantId == request.auth.uid
      );
    }
  }
}